{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "es2021"]
  },
  "include": ["src"]
}
